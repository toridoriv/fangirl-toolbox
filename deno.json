{
  "compilerOptions": {
    "checkJs": true,
    "noErrorTruncation": true,
    "strictFunctionTypes": true,
    "lib": ["deno.window"],
    "exactOptionalPropertyTypes": false,
    "strictPropertyInitialization": false
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 90,
    "singleQuote": false,
    "semiColons": true,
    "useTabs": false,
    "proseWrap": "always",
    "include": []
  },
  "imports": {
    "@dependencies": "./dependencies.ts",
    "@dev-dependencies": "./dev-dependencies.ts",
    "@base": "./base/mod.ts",
    "@global": "./base/global.ts",
    "@localization": "./localization/mod.ts",
    "@fanfictions": "./fanfictions/mod.ts",
    "@package": "./package.json",
    "kuroshiro": "npm:@sglkc/kuroshiro@1.0.1",
    "eld": "https://esm.sh/eld@1.0.0?bundle-deps&target=deno&keep-names&deno-std=0.212.0",
    "kuroshiro-analyzer-kuromoji": "npm:@sglkc/kuroshiro-analyzer-kuromoji@1.0.1",
    "natural": "npm:natural@6.10.4",
    "std/": "https://deno.land/std@0.212.0/",
    "toolkit": "https://cdn.jsdelivr.net/gh/toridoriv/toolkit@main/index.js",
    "translit-rus-eng": "https://esm.sh/translit-rus-eng@1.0.8?bundle-deps&target=deno&keep-names&deno-std=0.212.0",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "cheerio": "npm:@toridoriv/cheerio@1.0.3"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-namespace", "no-empty-interface"]
    }
  },
  "lock": "deno.lock",
  "scopes": {
    "./bin/": {
      "@dependencies": "./bin/dependencies.ts",
      "@helpers": "./bin/helpers.ts",
      "cliffy/": "https://deno.land/x/cliffy@v1.0.0-rc.3/"
    }
  },
  "tasks": {
    "format:lib": "deno run --allow-all scripts/format.ts lib",
    "localization:action": "deno run --allow-all localization/actions.ts"
  },
  "unstable": []
}
